<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_top_purchase_form" model="ir.ui.view">
            <field name="name">product.detail.purchase.form</field>
            <field name="model">product.detail.purchase</field>
            <field name="arch" type="xml">
                <form string="Product Details">
                    <group>
                      <group>
                          <field name="start_date"/>
                      </group>
                      <group>
                          <field name="end_date"/>
                      </group>
                      <group>
                          <field name="top_products" widget="radio"/>
                      </group>
                      <group>
                          <field name="no_of_products"/>
                      </group>
                      
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>	
                </form>
            </field>
        </record>
	
        <record id="open_top_purchase_action" model="ir.actions.act_window">
            <field name="name">Top Buying Products</field>
            <field name="res_model">product.detail.purchase</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_top_purchase_form"/>
        </record> 
</odoo>

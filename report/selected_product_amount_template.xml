<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_amount_purchase">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div style="text-align: center;">
                    	<span style="font-size: 25px;">Top Buying Products According to Purchase Amount</span> 
                    </div><br/>

                    <div class="row mt32 mb32">
                        <div class="col-xs-4">
                            <p>
                                <t t-if="docs.start_date"><strong>From Date:</strong> <span t-esc="docs.start_date"/><br/></t>
                                <t t-if="docs.end_date"><strong>To Date:</strong> <span t-esc="docs.end_date"/></t>
                            </p>
                        </div>
                    </div><br/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Products</th>
                                <th class="text-right">Total Purchases</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="products" t-as="a">
                                <td>
                                    <span t-esc="a['name']" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span t-esc="a['amount']" t-options="{'widget': 'monetary', 'display_currency': a['pricelist_id'] or res_company.currency_id}"/>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
